server {
    listen 80;
    listen [::]:80;

    server_name dev.wires.fr;
    server_tokens off;

    location / {
        return 301 https://$server_name$request_uri;
    }

}


server {
    listen 443 ssl;
    listen [::]:443 ssl;

    server_name dev.wires.fr;
    server_tokens off;

    include /etc/nginx/conf.d/ssl.inc;

    location /status {
        add_header Content-Type text/plain;
	    return 200 '443 dev.wires.fr';
    }

    location /schemas/ {
        alias /var/www/schemas/;
        autoindex on;
    }

    location /webhooks/deploy/backend {
    	proxy_pass http://watchtower-backend_container/v1/update;
        proxy_set_header Authorization $http_authorization;
    }

    location /webhooks/deploy/frontend {
        proxy_pass http://watchtower-frontend_container/v1/update;
        proxy_set_header Authorization $http_authorization;
    }

    location / {
        add_header Content-Type text/plain;
    	return 200;
    }

}