server {
    listen 80 default_server;
    listen [::]:80;

    server_name status.wires.fr;
    server_tokens off;

    location / {
        return 301 https://$server_name$request_uri;
    }
}

server {
    listen 443 ssl default_server;
    listen [::]:443 ssl;

    server_name status.wires.fr;
    server_tokens off;

    include /etc/nginx/conf.d/ssl.inc;

    location /dashboard {
        include /etc/nginx/conf.d/whitelist.inc;

        proxy_pass http://uptime-kuma_container;
    }

    location / {
        include /etc/nginx/conf.d/whitelist.inc;

        proxy_pass http://uptime-kuma_container;
    }

}