server {
    listen 80;
    listen [::]:80;

    server_name webhooks.wires.fr;
    server_tokens off;

    location / {
        return 301 https://$server_name$request_uri;
    }

}


server {
    listen 443 ssl;
    listen [::]:443 ssl;

    server_name webhooks.wires.fr;
    server_tokens off;

    include /etc/nginx/conf.d/ssl.inc;

    location /status {
        add_header Content-Type text/plain;
	    return 200 '443 webhooks.wires.fr';
    }

    location /deploy/backend {
    	proxy_pass http://watchtower-backend_container/v1/update;
        proxy_set_header Authorization $http_authorization;
    }

    location /deploy/frontend {
        proxy_pass http://watchtower-frontend_container/v1/update;
        proxy_set_header Authorization $http_authorization;
    }

    location / {
        add_header Content-Type text/plain;
    	return 200;
    }

}